<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.title"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home"), root_path %></li>
        <li><%= link_to t("static_pages.help.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.user.user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "static_pages.user.account" %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.user.profile"),
                current_user %></li>
              <li><%= link_to t("static_pages.user.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.logout.logout"),
                  logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.login.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<% provide :title, t("static_pages.login.login") %>
<h1><%= t "static_pages.login.login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t("static_pages.signup.email") %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t("static_pages.signup.password") %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "static_pages.login.remember_me" %></span>
      <% end %>

      <%= f.submit t("static_pages.login.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("static_pages.login.new_user") %>
      <%= link_to t("static_pages.signup.signup"), signup_path %></p>
  </div>
</div>

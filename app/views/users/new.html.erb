<% provide :title, t("static_pages.signup.signup") %>
<h1><%= t "static_pages.signup.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("static_pages.signup.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("static_pages.signup.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("static_pages.signup.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation,
        t("static_pages.signup.password_confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("static_pages.signup.create_acc"),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
